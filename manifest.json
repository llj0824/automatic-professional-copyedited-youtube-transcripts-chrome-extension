{
  "manifest_version": 3,
  "name": "YouTube Transcript Manager",
  "version": "1.1",
  "description": "Retrieve, paginate, and process YouTube video transcripts with OpenAI and Anthropic.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/redHeadIcon.png"
    }
  },
  "icons": {
    "48": "icons/redHeadIcon.png"
  },
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.anthropic.com/*"
  ]
}
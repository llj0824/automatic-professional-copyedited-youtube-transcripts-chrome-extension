{
  "manifest_version": 3,
  "name": "Readable Transcript Chrome Extension",
  "version": "1.0",
  "description": "A Chrome extension to enhance YouTube transcripts with professional clarity.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "dist/bundle.js"  // Ensure this is the correct path for your service worker
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/bundle.js"]  // Ensure this is appropriate for your content script logic
    }
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ]
}